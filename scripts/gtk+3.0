clear_flags

cd $CWD/$SOURCE

make clean || true

GLIB_COMPILE_RESOURCES=/usr/bin/glib-compile-resources \
./configure --prefix=$PREFIX \
--build=$BUILD \
--target=$TARGET \
--host=$TARGET \
--enable-introspection=no \
--disable-cups \
--disable-schemas-compile \
--disable-installed-tests \
--enable-broadway-backend \
--enable-x11-backend \
--enable-wayland-backend \
--disable-glibtest

make V=1 -j $NUMJOB

